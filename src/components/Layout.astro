---
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { 
  title = "Joe Charland - Full Stack Software Engineer | Portfolio",
  description = "Full Stack Software Engineer specializing in Computing Systems & AI. Building scalable web applications and automating complex workflows.",
  image = "https://joecharland.dev/og-image.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || "https://joecharland.dev");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Joe Charland" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Cloudflare Web Analytics --><script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "7e70a6b141af4b84a2f58ff22566e2b5"}'></script><!-- End Cloudflare Web Analytics -->
  </head>
  <body class="bg-gray-900 text-white font-sans min-h-screen flex flex-col">
    <div class="cursor-spotlight"></div>
    <Navbar />
    <main class="max-w-4xl mx-auto p-6 flex-grow w-full relative z-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* Cursor spotlight effect */
  .cursor-spotlight {
    position: fixed;
    width: 900px;
    height: 900px;
    pointer-events: none;
    z-index: 1;
    opacity: 0;
    transition: opacity 0.5s ease;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 0.15) 0%,
      rgba(59, 130, 246, 0.08) 25%,
      transparent 50%
    );
    transform: translate(-50%, -50%);
  }
</style>

<script>
  // Cursor spotlight effect
  const spotlight = document.querySelector('.cursor-spotlight') as HTMLElement;
  
  let mouseX = 0;
  let mouseY = 0;
  let currentX = 0;
  let currentY = 0;
  
  // Track mouse movement
  document.addEventListener('mousemove', (e) => {
    mouseX = e.clientX;
    mouseY = e.clientY;
    
    if (spotlight) {
      spotlight.style.opacity = '1';
    }
  });

  // Smooth animation loop with easing
  function animate() {
    // Ease towards mouse position for smooth movement
    currentX += (mouseX - currentX) * 0.15;
    currentY += (mouseY - currentY) * 0.15;
    
    if (spotlight) {
      spotlight.style.left = `${currentX}px`;
      spotlight.style.top = `${currentY}px`;
    }
    
    requestAnimationFrame(animate);
  }
  
  animate();

  // Hide spotlight when mouse leaves window
  document.addEventListener('mouseleave', () => {
    if (spotlight) {
      spotlight.style.opacity = '0';
    }
  });
</script>