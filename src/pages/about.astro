---
import Layout from "../components/Layout.astro";

const aboutContent = await Astro.glob("../content/about.md");
const { Content } = aboutContent[0];
---

<Layout title="About - Joe Charland">
  <article class="prose prose-invert prose-lg max-w-none">
    <h1 class="text-3xl md:text-4xl font-bold mb-8">About Me</h1>
    <div class="bg-gray-800/50 rounded-lg p-8 border border-gray-700">
      <Content />
    </div>
  </article>
</Layout>