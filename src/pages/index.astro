---
import Layout from "../components/Layout.astro";
---

<Layout title="Joe Charland - Full Stack Software Engineer">
  <section class="hero-section text-center py-20 md:py-32">
    <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
      Hello, I'm <span class="name-highlight"><span class="name-text">Joe Charland</span></span>
    </h1>
    <p class="text-xl md:text-2xl text-gray-300 mb-3 animate-fade-in-delay">
      Full Stack Software Engineer @ <a href="https://www.bny.com" target="_blank" rel="noopener noreferrer" class="font-semibold text-white hover:text-blue-400 transition-colors">BNY</a>
    </p>
    <p class="text-base md:text-lg text-gray-400 mb-8 animate-fade-in-delay">
      M.S. in Computer Science (Georgia Tech)<br>
      Specializing in Computing Systems & Artificial Intelligence
    </p>
    <p class="text-base md:text-lg text-gray-400 max-w-2xl mx-auto mb-12 animate-fade-in-delay leading-relaxed">
      Crafting robust financial applications with modern web technologies.
      Focused on system optimization, CI/CD automation, and scalable architecture.
    </p>
    <div class="flex gap-4 justify-center flex-wrap animate-fade-in-delay">
      <a href="/projects" 
         id="projects-btn"
         class="btn-pulse bg-blue-600 hover:bg-blue-500 px-6 py-3 rounded-lg font-semibold transition-all duration-300">
        <span class="btn-text">View Projects</span>
      </a>
      <a href="/about" 
         class="btn-secondary px-6 py-3 rounded-lg font-semibold">
        <span class="btn-text">About Me</span>
      </a>
      <a href="/resume" 
         class="btn-ternary px-6 py-3 rounded-lg font-semibold">
        <span class="btn-text">Resume</span>
      </a>
    </div>
  </section>
</Layout>

<script>
  // Wrap each letter in all button text with spans
  function initButtonLetters() {
    const allBtnTexts = document.querySelectorAll('.btn-text') as NodeListOf<HTMLElement>;
    allBtnTexts.forEach((btnText) => {
      if (btnText && !btnText.querySelector('.letter')) {
        const text = btnText.textContent?.trim() || '';
        let letterIndex = 0;
        const wrappedText = text.split('').map((char) => {
          if (char === ' ') {
            return '<span class="letter-space"> </span>';
          }
          const index = letterIndex++;
          return `<span class="letter" style="--index: ${index}">${char}</span>`;
        }).join('');
        btnText.innerHTML = wrappedText;
      }
    });
  }

  // Wrap each letter in the name highlight text
  function initNameLetters() {
    const nameText = document.querySelector('.name-text') as HTMLElement;
    if (nameText && !nameText.querySelector('.letter')) {
      const text = nameText.textContent?.trim() || '';
      let letterIndex = 0;
      const wrappedText = text.split('').map((char) => {
        if (char === ' ') {
          return '<span class="letter-space"> </span>';
        }
        const index = letterIndex++;
        return `<span class="letter" style="--index: ${index}">${char}</span>`;
      }).join('');
      nameText.innerHTML = wrappedText;
    }
  }
  
  // Try multiple times in case of fade-in delays
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initButtonLetters, 100);
      setTimeout(initNameLetters, 100);
    });
  } else {
    setTimeout(initButtonLetters, 100);
    setTimeout(initNameLetters, 100);
  }
  
  // Also try after a short delay for animations
  setTimeout(initButtonLetters, 500);
  setTimeout(initNameLetters, 500);
</script>