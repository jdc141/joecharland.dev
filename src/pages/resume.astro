---
import Layout from "../components/Layout.astro";
import resumeData from "../data/resume.json";
---

<Layout title="Resume - Joe Charland">
  <div class="max-w-4xl">
    <!-- Header with Download Button -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4">
      <h1 class="text-3xl md:text-4xl font-bold">Resume</h1>
      <a 
        href="/Resume_Joseph_Charland.pdf" 
        download
        class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-500 px-6 py-3 rounded-lg text-white font-semibold transition shadow-lg hover:shadow-xl">
        <i class="fas fa-download"></i>
        Download PDF
      </a>
    </div>

    <!-- Contact Info -->
    <div class="mb-12 text-gray-300 flex flex-wrap gap-4 text-sm">
      <a href={`https://github.com/${resumeData.personal.github}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-400 transition">
        <i class="fab fa-github"></i> {resumeData.personal.github}
      </a>
      <a href={`https://www.linkedin.com/in/${resumeData.personal.linkedin}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-400 transition">
        <i class="fab fa-linkedin"></i> {resumeData.personal.linkedin}
      </a>
    </div>

    <!-- Experience Section -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8 text-blue-400">Experience</h2>

      {resumeData.experience.map((job) => (
        <div class="mb-12 resume-card">
          <div class="flex flex-col md:flex-row md:gap-8">
            <div class="text-gray-400 text-sm mb-2 md:mb-0 md:w-48 flex-shrink-0">
              {job.startDate} â€” {job.endDate}
            </div>
            <div class="flex-grow">
              <h3 class="text-xl font-semibold text-white mb-1">
                {job.title}
              </h3>
              <p class="text-gray-300 mb-4">{job.company}, {job.location}</p>
              
              <ul class="space-y-2 text-gray-300 mb-4 list-disc list-inside">
                {job.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>

              <div class="flex flex-wrap gap-2">
                {job.technologies.map((tech) => (
                  <span class="bg-gray-800 text-blue-300 text-xs px-3 py-1 rounded-full">{tech}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </section>

    <!-- Education Section -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8 text-blue-400">Education</h2>

      {resumeData.education.map((edu) => (
        <div class="mb-8 resume-card">
          <div class="flex flex-col md:flex-row md:gap-8">
            <div class="text-gray-400 text-sm mb-2 md:mb-0 md:w-48 flex-shrink-0">
              {edu.graduationDate}
            </div>
            <div class="flex-grow">
              <h3 class="text-xl font-semibold text-white mb-1">
                {edu.degree}
              </h3>
              <p class="text-gray-300 mb-2">{edu.institution}</p>
              {edu.specialization && (
                <p class="text-gray-400 text-sm italic">{edu.specialization}</p>
              )}
            </div>
          </div>
        </div>
      ))}
    </section>

    <!-- Technical Skills Section -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8 text-blue-400">Technical Skills</h2>
      
      <div class="space-y-6">
        <div class="resume-card">
          <h3 class="text-lg font-semibold text-white mb-3">Languages & Frameworks</h3>
          <div class="flex flex-wrap gap-2">
            {resumeData.skills.languages.map((lang) => (
              <span class="bg-gray-800 text-gray-300 text-sm px-4 py-2 rounded-lg">{lang}</span>
            ))}
          </div>
        </div>

        <div class="resume-card">
          <h3 class="text-lg font-semibold text-white mb-3">Tools & Technologies</h3>
          <div class="flex flex-wrap gap-2">
            {resumeData.skills.tools.map((tool) => (
              <span class="bg-gray-800 text-gray-300 text-sm px-4 py-2 rounded-lg">{tool}</span>
            ))}
          </div>
        </div>

        <div class="resume-card">
          <h3 class="text-lg font-semibold text-white mb-3">Focus Areas</h3>
          <div class="flex flex-wrap gap-2">
            {resumeData.skills.focusAreas.map((area) => (
              <span class="bg-blue-600/20 text-blue-300 text-sm px-4 py-2 rounded-lg border border-blue-500/30">{area}</span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Bottom Download CTA -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-8 text-center">
      <a 
        href="/Resume_Joseph_Charland.pdf" 
        download
        class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-500 px-6 py-3 rounded-lg text-white font-semibold transition">
        <i class="fas fa-download"></i>
        Download Full Resume (PDF)
      </a>
    </div>
  </div>
</Layout>

<style>
  /* Hover effect for resume sections */
  .resume-card {
    transition: all 0.3s ease;
    padding: 1.5rem;
    margin: -1.5rem;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
  }

  .resume-card:hover {
    transform: scale(1.02);
    background: rgba(59, 130, 246, 0.05);
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.15);
    z-index: 10;
    position: relative;
  }
</style>