---
import Layout from "../components/Layout.astro";
---

<Layout title="Coming Soon... - Joe Charland">
  <div class="flex flex-col items-center justify-center min-h-[70vh] py-8">
    <h1 class="text-3xl md:text-4xl font-bold mb-8 text-center">Busy at work...</h1>
    
    <div class="lofi-container relative w-full max-w-4xl rounded-xl overflow-hidden shadow-2xl border-2 border-slate-700 bg-slate-900">
      <img 
        src="https://media3.giphy.com/media/v1.Y2lkPTc5MGI3NjExbmJvb25mYjVrejF5MjNnb3BwYTRyc200cmZ4dHJzNjNiMjJnbmNncSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/13HgwGsXF0aiGY/giphy.gif"
        alt="Developer coding animation"
        class="w-full h-auto object-contain"
      />
    </div>
    
    <p class="mt-8 text-gray-400 text-center max-w-lg px-4">
      Building or breaking something. Come back soon!
    </p>
    
    <div class="mt-4 text-sm text-gray-500">
      <a href="/projects" class="text-blue-400 hover:text-blue-300 transition">‚Üê Back to Projects</a>
    </div>
  </div>
</Layout>
